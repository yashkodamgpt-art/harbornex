{
    "name": "nexflow",
    "displayName": "NexFlow",
    "description": "Deploy your projects to HarborNex with one click",
    "version": "1.0.0",
    "publisher": "harbornex",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "nexflow.deploy",
                "title": "Deploy to HarborNex",
                "icon": "$(rocket)"
            },
            {
                "command": "nexflow.login",
                "title": "NexFlow: Set API Key"
            },
            {
                "command": "nexflow.status",
                "title": "NexFlow: Show Status"
            }
        ],
        "configuration": {
            "title": "NexFlow",
            "properties": {
                "nexflow.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Your HarborNex API key"
                },
                "nexflow.apiUrl": {
                    "type": "string",
                    "default": "https://app.harbornex.dev",
                    "description": "NexCloud API URL"
                }
            }
        },
        "menus": {
            "explorer/context": [
                {
                    "command": "nexflow.deploy",
                    "group": "navigation",
                    "when": "explorerResourceIsFolder"
                }
            ]
        }
    },
    "scripts": {
        "package": "vsce package"
    }
}